<ul class="nav nav-tabs">
  <li> <%= link_to tag_icon(:list, pat(:list)), url(:blogs, :index) %></li>
  <li> <%= link_to tag_icon(:plus, pat(:new)), url(:blogs, :new) %></li>
  <li class="active"> <%= link_to tag_icon(:edit, pat(:edit)), url(:blogs, :edit, :id => @blog.id) %></li>
</ul>

<div class="tabs-content">
  <% form_for @blog, url(:blogs, :update, :id => @blog.id), :method => :put, :class => 'form-horizontal', :id => 'editor' do |f| %>
      <%= partial 'blogs/form', :locals => {:form => f} %>
  <% end %>
</div>

