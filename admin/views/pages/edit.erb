<ul class="nav nav-tabs">
  <li> <%= link_to tag_icon(:list, pat(:list)), url(:pages, :index) %></li>
  <li> <%= link_to tag_icon(:plus, pat(:new)), url(:pages, :new) %></li>
  <li class="active"> <%= link_to tag_icon(:edit, pat(:edit)), url(:pages, :edit, :id => @page.id) %></li>
</ul>
<div class="tabs-content">
  <% form_for :page, url(:pages, :update, :id => @page.id), :method => :put, :class => 'form-horizontal' do |f| %>
    <%= partial 'pages/form', :locals => { :f => f } %>
  <% end %>
</div>
